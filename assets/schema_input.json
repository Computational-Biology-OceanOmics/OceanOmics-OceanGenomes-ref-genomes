{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/Computational-Biology-OceanOmics/OceanGenomes-refgenomes/master/assets/schema_input.json",
    "title": "Computational-Biology-OceanOmics/OceanGenomes-refgenomes pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["sample"]
            },
            "hifi_dir": {
                "type": "string",
                "format": "directory-path",
                "exists": true,
                "errorMessage": "HiFi directory must exist",
                "meta": ["hifi_dir"]
            },
            "hic_dir": {
                "type": "string",
                "format": "directory-path",
                "exists": true,
                "errorMessage": "Hi-C directory must exist",
                "meta": ["hic_dir"]
            },
            "version": {
                "type": "string",
                "meta": ["version"]
            },
            "date": {
                "type": "string",
                "meta": ["date"]
            },
            "tolid": {
                "type": "string",
                "meta": ["tolid"]
            },
            "taxid": {
                "type": "string",
                "meta": ["taxid"]
            }
        },
        "required": ["sample", "hifi_dir", "version", "date", "tolid", "taxid"]
    }
}
