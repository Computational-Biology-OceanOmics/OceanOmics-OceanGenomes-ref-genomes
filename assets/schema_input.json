{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/oceangenomesrefgenomes/master/assets/schema_input.json",
    "title": "nf-core/oceangenomesrefgenomes pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "hifi_dir": {
                "type": "string",
                "format": "directory-path",
                "exists": true,
                "errorMessage": "HiFi directory must exist",
                "meta": ["hifi_dir"]
            },
            "hic_dir": {
                "type": "string",
                "format": "directory-path",
                "exists": true,
                "errorMessage": "Hi-C directory must exist",
                "meta": ["hic_dir"]
            },
            "version": {
                "type": "integer",
                "meta": ["version"]
            },
            "seq_date": {
                "type": "string",
                "meta": ["seq_date"]
            },
            "tolid": {
                "type": "string",
                "meta": ["tolid"]
            },
            "gsize": {
                "type": "string",
                "meta": ["gsize"]
            },
            "taxids": {
                "type": "string",
                "meta": ["taxids"]
            }
        },
        "required": ["sample", "hifi_dir", "version", "seq_date", "tolid", "gsize", "taxids"]
    }
}
