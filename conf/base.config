/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Computational-Biology-OceanOmics/OceanGenomes-refgenomes Nextflow base config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    A 'blank slate' config file, appropriate for general use on most high performance
    compute environments. Assumes that all software is installed and available on
    the PATH. Runs in `local` mode - all jobs will be run on the logged in environment.
----------------------------------------------------------------------------------------
*/

process {

    cpus   = { 1 }
    memory = { 6.GB }
    time   = { 4.h }

    errorStrategy = { task.exitStatus in ((130..145) + 104) ? 'retry' : 'finish' }
    maxRetries    = 1
    maxErrors     = '-1'

    // Process-specific resource requirements
    // NOTE - Please try and re-use the labels below as much as possible.
    //        These labels are used and recognised by default in DSL2 files hosted on nf-core/modules.
    //        If possible, it would be nice to keep the same label naming convention when
    //        adding in your local modules too.
    withLabel:process_single {
        cpus   = { 1 }
        memory = { 6.GB }
        time   = { 4.h }
    }
    withLabel:process_low {
        cpus   = { 8 }
        memory = { 50.GB  }
        time   = { 4.h   }
    }
    withLabel:process_medium {
        cpus   = { 64 }
        memory = { 150.GB }
        time   = { 8.h }
    }
    withLabel:process_high {
        cpus   = { 128 }
        memory = { 230.GB}
        time   = { 24.h }
    }
    withLabel:process_long {
        time   = { 96.h  }
    }
    withLabel:process_high_memory {
        memory = { 500.GB }
    }
    withLabel:error_ignore {
        errorStrategy = 'ignore'
    }
    withLabel:error_retry {
        errorStrategy = 'retry'
        maxRetries    = 2
    }
    withName:CUSTOM_DUMPSOFTWAREVERSIONS {
        cache = false
    }
    withName:HIFIADAPTERFILT {
        cpus   = { 16 }
        memory = { 8.GB }
        time   = { 16.h }
    }
    withName:MERYL_COUNT {
        cpus   = { 64 }
        memory = { 200.GB }
        time   = { 4.h }
    }
    withName:HIFIASM {
        cpus   = { 128 }
        memory = { 230.GB }
        time   = { 24.h }
    }
    withName:BUSCO_BUSCO {
        cpus   = { 16 }
        memory = { 64.GB }
        time   = { 8.h }
    }
    withName:BUSCO_BUSCO_FINAL {
        cpus   = { 32 }
        memory = { 100.GB }
        time   = { 8.h }
    }
    withName:MERQURY {
        cpus   = { 8 }
        memory = { 40.GB }
        time   = { 4.h }
    }
    withName:MERQURY_FINAL {
        cpus   = { 8 }
        memory = { 40.GB }
        time   = { 4.h }
    }
    withName:SAMTOOLS_FAIDX {
        cpus   = { 64 }
        memory = { 40.GB }
        time   = { 4.h }
    }
    withName:CUT {
        cpus   = { 64 }
        memory = { 40.GB }
        time   = { 4.h }
    }
    withName:BWA_INDEX {
        cpus   = { 32 }
        memory = { 64.GB }
        time   = { 4.h }
    }
    withName:BWA_MEM {
        cpus   = { 32 }
        memory = { 64.GB }
        time   = { 15.h }
    }
    withName:PAIRTOOLS_PARSE {
        cpus   = { 32 }
        memory = { 64.GB }
        time   = { 14.h }
    }
    withName:PAIRTOOLS_SORT {
        queue = 'highmem'
        cpus   = { 16 }
        memory = { 400.GB }
        time   = { 14.h }
    }
    withName:PAIRTOOLS_DEDUP {
        cpus   = { 32 }
        memory = { 230.GB }
        time   = { 14.h }
    }
    withName:PAIRTOOLS_SPLIT {
        cpus   = { 32 }
        memory = { 230.GB }
        time   = { 14.h }
    }
    withName:SAMTOOLS_SORT {
        cpus   = { 32 }
        memory = { 230.GB }
        time   = { 15.h }
    }
    withName:SAMTOOLS_INDEX {
        cpus   = { 32 }
        memory = { 64.GB }
        time   = { 14.h }
    }
    withName:FCS_FCSGX_HAP1 {
        queue  = 'highmem'
        cpus   = { 128 }
        memory = { 500.GB }
        time   = { 24.h }
    }
    withName:FCS_FCSGX_HAP2 {
        queue  = 'highmem'
        cpus   = { 128 }
        memory = { 500.GB }
        time   = { 24.h }
    }

    withName:MINIMAP2_ALIGN {
        cpus   = { 48 }
        memory = { 96.GB }
        time   = { 8.h }
    }

    withName:BEDTOOLS_GENOMECOV {
        cpus   = { 24 }
        memory = { 64.GB }
        time   = { 4.h }
    }

    withName:TIDK {
        cpus   = { 48 }
        memory = { 96.GB }
        time   = { 4.h }
    }
}
